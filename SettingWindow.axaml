<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BongoCat_Like"
        x:Class="BongoCat_Like.SettingWindow"
        Title="{Binding Source={x:Static local:GlobalHelper.Name}}"
        Width="350" Height="500"
        WindowStartupLocation="CenterScreen"
        CanResize="False">

    <TabControl x:Name="NavigationTabs">
        <TabItem Header="默认皮肤">
            <StackPanel Margin="20">
                <TextBlock Text="这是页面一的内容" FontSize="16"/>
                <Button Content="切换到设置页"
                        Margin="0,10"/>
            </StackPanel>
        </TabItem>

        <TabItem Header="自定义皮肤">
            <StackPanel Margin="20">
                <TextBlock Text="这是页面二的内容" FontSize="16"/>
                <TextBox Watermark="输入内容..."/>
            </StackPanel>
        </TabItem>

        <TabItem Header="设置">
            <StackPanel Margin="20">
                <TextBlock Text="系统设置" FontSize="18" FontWeight="Bold"/>
                <CheckBox Content="启用高级功能" Margin="0,10"/>
                <Button Content="保存设置" HorizontalAlignment="Right"/>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>
