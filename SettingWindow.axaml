<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BongoCat_Like"
        x:Class="BongoCat_Like.SettingWindow"
        Title="{Binding Source={x:Static local:GlobalHelper.Name}}"
        Width="350" Height="500"
        WindowStartupLocation="CenterScreen"
        CanResize="False">

    <TabControl x:Name="NavigationTabs">
        <TabControl.Background>
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                <GradientStop Offset="0.0" Color="#FF66CCFF"/>
                <GradientStop Offset="1.0" Color="#FFCCFFFF"/>
            </LinearGradientBrush>
        </TabControl.Background>
        <TabControl.Styles>
            <Style Selector="TabItem">
                <Setter Property="FontSize" Value="20"/>
            </Style>
        </TabControl.Styles>

        <TabItem Header="默认皮肤">
            <StackPanel x:Name="DefaultSkinList" Margin="0,10"></StackPanel>
        </TabItem>

        <TabItem Header="自定义皮肤">
            <StackPanel x:Name="CustomSkinList" Margin="0,10"></StackPanel>
        </TabItem>

        <TabItem Header="设置">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,10,0,20">
                    <TextBlock Text="系统" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                    <CheckBox Content="始终置顶"/>
                    <CheckBox Content="开机自启"/>
                    <CheckBox Content="任务栏图标"/>

                    <TextBlock Text="视觉效果" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                    <CheckBox Content="水平翻转"/>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="缩放比例"
                               VerticalAlignment="Center"
                               VerticalContentAlignment="Center"/>
                        <ComboBox SelectedIndex="2" Margin="10,0">
                            <ComboBoxItem Content="25%"></ComboBoxItem>
                            <ComboBoxItem Content="37.5%"></ComboBoxItem>
                            <ComboBoxItem Content="50%"></ComboBoxItem>
                            <ComboBoxItem Content="62.5%"></ComboBoxItem>
                            <ComboBoxItem Content="75%"></ComboBoxItem>
                            <ComboBoxItem Content="100%"></ComboBoxItem>
                            <ComboBoxItem Content="111%"></ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <TextBlock Text="相互作用" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                    <CheckBox Content="禁用拖动"/>
                    <CheckBox Content="任务栏吸附"/>

                    <TextBlock Text="随机效果" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="随机搭配"
                               VerticalAlignment="Center"
                               VerticalContentAlignment="Center"/>
                        <ComboBox SelectedIndex="0" Margin="10,0">
                            <ComboBoxItem Content="从不"></ComboBoxItem>
                            <ComboBoxItem Content="1分钟"></ComboBoxItem>
                            <ComboBoxItem Content="3分钟"></ComboBoxItem>
                            <ComboBoxItem Content="5分钟"></ComboBoxItem>
                            <ComboBoxItem Content="15分钟"></ComboBoxItem>
                            <ComboBoxItem Content="30分钟"></ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <TextBlock Text="退出程序" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                    <Button Content="退出"/>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
    </TabControl>
</Window>
