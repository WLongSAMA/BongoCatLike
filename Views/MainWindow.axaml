<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BongoCat_Like"
        xmlns:utilities="clr-namespace:BongoCat_Like.Utilities"
        x:Class="BongoCat_Like.Views.MainWindow"
        Title="BongoCat_Like"
        Width="{Binding Source={x:Static utilities:GlobalHelper.WindowWidth}}"
        Height="{Binding Source={x:Static utilities:GlobalHelper.WindowHeight}}"
        Background="Transparent"
        TransparencyLevelHint="Transparent"
        SystemDecorations="None"
        WindowStartupLocation="Manual">

    <Grid x:Name="MainGrid"
          HorizontalAlignment="Left"
          VerticalAlignment="Top"
          PointerPressed="OnPointerPressed"
          PointerMoved="OnPointerMoved"
          PointerReleased="OnPointerReleased"
          PointerCaptureLost="OnPointerCaptureLost"
          RenderOptions.BitmapInterpolationMode="HighQuality">
        <Canvas x:Name="SkinCanvas">
            <Image x:Name="SkinImage"
                   Width="{Binding Source={x:Static utilities:GlobalHelper.WindowWidth}}"
                   Height="{Binding Source={x:Static utilities:GlobalHelper.WindowHeight}}"
                   Source="/Assets/default/CatLeft.png"
                   Stretch="UniformToFill"/>
            <Image x:Name="HatImage"
                   Width="{Binding Source={x:Static utilities:GlobalHelper.WindowWidth}}"
                   Height="{Binding Source={x:Static utilities:GlobalHelper.WindowHeight}}"
                   Source=""
                   Stretch="UniformToFill"/>
            <Image x:Name="HandImage"
                   Width="{Binding Source={x:Static utilities:GlobalHelper.WindowWidth}}"
                   Height="{Binding Source={x:Static utilities:GlobalHelper.WindowHeight}}"
                   Source="/Assets/default/CatRight.png"
                   Stretch="UniformToFill"/>
        </Canvas>
    </Grid>
</Window>
