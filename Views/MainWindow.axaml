<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BongoCat_Like"
        xmlns:utilities="clr-namespace:BongoCat_Like.Utilities"
        x:Class="BongoCat_Like.Views.MainWindow"
        Title="BongoCat_Like"
        Width="{Binding Source={x:Static utilities:GlobalHelper.WindowWidth}}"
        Height="{Binding Source={x:Static utilities:GlobalHelper.WindowHeight}}"
        Background="Transparent"
        SystemDecorations="None"
        WindowStartupLocation="Manual">

    <Grid x:Name="MainGrid"
          Width="256"
          Height="256"
          PointerPressed="OnPointerPressed"
          RenderOptions.BitmapInterpolationMode="HighQuality">
        <Image x:Name="SkinImage"
               Source="/Assets/default/CatLeft.png"
               Stretch="UniformToFill"/>
        <Image x:Name="HandImage"
               Source="/Assets/default/CatRight.png"
               Stretch="UniformToFill"/>
        <Image x:Name="HatImage"
               Source=""
               Stretch="UniformToFill">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                    <TranslateTransform X="32" Y="-70" />
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
